<% if ( "undefined" !== typeof(errors) && errors.length) { %>
  <% errors.forEach(function(error){ %>
    <p class="error"><%=error%></p>
  <% }) %>
<% } %>

<form method="POST" action="/register" enctype="multipart/form-data">

  <div class="control-group">
    <label class="control-label" for="email">Email</label>
        <div class="help-inline">(<strong>.edu</strong> emails only)</div>

    <div class="controls">
      <input type="email" name="email" id="email" placeholder=""/>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="first_name">First Name</label>
    <div class="controls">
      <input type="text" name="first_name" id="first_name" placeholder=""/>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="last_name">Last Name</label>
    <div class="controls">
      <input type="text" name="last_name" id="last_name" placeholder=""/>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="password">Password</label>
    <div class="help-inline">(At least 6 characters)</div>

    <div class="controls">
      <input type="password" name="password" id="password" placeholder="" />
    </div>
  </div>


  <div class="control-group">
    <label class="control-label" for="resume">Resumé</label>
    <div class="controls">
      <button type="button" class="btn resume-upload" style="position: relative;">
        Upload Resumé
        <input type="file" name="resume" id="resume" style="position: absolute; top:0; left:0; width: 100%; height:100%; margin:0; padding:0; opacity:0;" title="Upload your resumé"/>
      </button>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn">Get Me Jobs!</button>
    </div>
  </div>

</form>
