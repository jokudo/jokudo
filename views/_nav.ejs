<div id="header">
  <div class="container">
    <div id="header-logo">
      <a href="http://<%=domain%>">
        <img src="/images/logo.png" alt="jokudo"/>
      </a>
    </div>
    <div id="user-nav">
      <% if ( !loggedIn ){ %>
      <form class="inline inline-right" method="POST" action="/login">
        <div class="control-block">
          <input type="email" name="email" placeholder="Email"/>
        </div>
        <div class="control-block">
          <input type="password" name="password" placeholder="Password"/>
        </div>
        <div class="control-block">
          <button type="submit" class="btn loginButton" href="/login">Sign In</button>
        </div>
      </form>
      <% } else {%>
      <% if ( user.admin ){%>
        <div style="position:absolute;right:400px;top:30px;font-size: 20px;">
          <a href="/admin/">Admin</a>
        </div>
      <%}%>
      <ul>
        <li>
          <a href="/account">
            <img class="avatar" src="<%=user.avatar%>" />
            <button class="btn hello">hey <%=user.firstName || 'there'%>!</button>
          </a>
        </li>
      </ul>
      <% } %>
    </div>
  </div>
</div>