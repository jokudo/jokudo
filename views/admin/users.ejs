<% include ../_head %>
  <% include ../_nav %>

  <div class="container">
    <div class="row">
      <div class="span12">
        <h1>Users</h1>
        <h5><a href="/admin">back</a></h5>
      </div>
    </div>

    <div class="row">
      <div class="span6">
        <dl>
          <dt>Count:</dt>
          <dd><%=users.length%></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="span12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>School</th>
              <th>Major</th>
              <th>Resume</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user){%>
            <tr>
              <td><a href="/admin/users/<%=user.id%>"><%=user.name%></a></td>
              <td><a href="/admin/users/<%=user.id%>"><%=user.email%></a></td>
              <td><%=user.school_name%></td>
              <td><%=user.major%><%if(user.minor){%><br /><small><%=user.minor%></small><%}%></td>
              <td><%if (user.hasResume) {%><a href="/admin/users/<%=user.id%>/resume/<%=user.resume_name%>" target="_blank"><%=user.resume_name%></a><%}else{%>&mdash;<%}%></td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<% include ../_foot %>